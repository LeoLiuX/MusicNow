<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_black"
            android:text="Music Name"
            android:layout_below="@+id/music_main_image"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:id="@+id/music_main_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/video_default_image"
            android:id="@+id/music_main_image"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/music_main_favorite"
            android:src="@drawable/favorite_off"
            android:layout_alignBottom="@+id/music_main_image"
            android:layout_alignEnd="@+id/music_main_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/music_main_description"
            android:text="This is the description of this music!"
            android:maxLines="1"
            android:layout_below="@+id/music_main_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>