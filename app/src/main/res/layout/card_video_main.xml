<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_black"
            android:text="Video Name"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/video_main_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            android:id="@+id/video_main_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/video_main_name"
            android:layout_toEndOf="@id/video_main_image"
            android:id="@+id/video_main_description"
            android:text="This is the description of this video!"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="143dp"
            android:layout_height="200dp"
            android:src="@drawable/video_default_image"
            android:id="@+id/video_main_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favorite_off"
            android:id="@+id/video_main_favorite"
            android:layout_alignEnd="@+id/video_main_image"
            android:layout_alignBaseline="@+id/video_main_image"
            android:layout_alignBottom="@id/video_main_image"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>